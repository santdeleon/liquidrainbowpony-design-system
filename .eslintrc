{
  "env": {
    "browser": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "react-app",
    "plugin:prettier/recommended",
    "plugin:react/recommended"
  ],
  "ignorePatterns": ["node_modules/**/*"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
