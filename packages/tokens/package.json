{
  "name": "@liquidrainbowpony/tokens",
  "version": "0.3.0",
  "description": "The Liquidrainbowpony Design System token library.",
  "author": "Santiago Deleon <sant@santdeleon.io>",
  "keywords": [
    "@liquidrainbowpony",
    "@liquidrainbowpony/tokens",
    "liquidrainbowpony",
    "liquid-rainbow-pony",
    "liquidrainbowpony-design-system"
  ],
  "main": "build/tokens.js",
  "style": "build/tokens.scss",
  "files": [
    "build/*"
  ],
  "scripts": {
    "build": "run-s build:clean build:tokens build:style-dictionary",
    "build:clean": "rm -rf ./properties ./build",
    "build:tokens": "node \"./src/index.js\"",
    "build:style-dictionary": "style-dictionary build"
  },
  "publishConfig": {
    "access": "private"
  },
  "devDependencies": {
    "dotenv": "^8.2.0",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "style-dictionary": "^2.10.2"
  },
  "json": "build/tokens.json",
  "sass": "build/tokens.scss"
}
